                        <VBox alignment="BOTTOM_CENTER" styleClass="podium-bar-gold" prefWidth="120" prefHeight="180">
                            <children>
                                <Label text="1" styleClass="podium-rank"/>
                                <Label fx:id="lblScore1" text="1200" styleClass="podium-score"/>
