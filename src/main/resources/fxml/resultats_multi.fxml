                <!-- Remaining Players List (Horizontal) -->
                <ScrollPane vbarPolicy="NEVER" hbarPolicy="AS_NEEDED" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;">
                    <content>
                        <HBox fx:id="listContainer" spacing="15.0" alignment="CENTER" style="-fx-padding: 10;">
                            <!-- Dynamic Cards will be added here -->
                        </HBox>
                    </content>
                </ScrollPane>

            </VBox>
        </content>
    </ScrollPane>

    <!-- Bottom Action Bar -->
    <HBox alignment="CENTER" spacing="25" styleClass="bottom-action-bar">
        <children>
            <Button fx:id="btnRevanche" onAction="#handleRevanche" styleClass="btn-retry" text="ðŸ”„ REVANCHE" prefWidth="200" prefHeight="50"/>
