<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.triharf.controllers.JeuBattleController"
            prefWidth="900.0" prefHeight="600.0"
            styleClass="root-stack"
            stylesheets="@../css/main.css">

    <!-- En-tÃªte -->
    <top>
        <VBox spacing="0">
            <children>
                <HBox alignment="CENTER" prefHeight="70.0" styleClass="game-header" spacing="40.0" style="-fx-border-color: #c0392b; -fx-background-color: rgba(192, 57, 43, 0.2);">
                    <children>
                        <!-- Bouton flÃ¨che -->
                        <Button fx:id="btnBack" text="â†" styleClass="btn-back"/>

                        <!-- TIMER -->
                        <HBox alignment="CENTER" spacing="10.0" styleClass="info-box">
                            <children>
                                <Label text="Temps:" styleClass="info-label"/>
                                <Label fx:id="labelTimer" text="" styleClass="info-value">
                                    <font><Font size="18.0"/></font>
                                </Label>
                            </children>
                        </HBox>

                        <!-- LETTRE Ã€ TROUVER -->
                        <VBox alignment="CENTER" spacing="2">
                            <children>
                                <Label text="Lettre" styleClass="info-label" style="-fx-font-size: 10px;" />
                                <Label fx:id="lblLettre" text="" style="-fx-background-color: linear-gradient(to bottom, #e74c3c, #c0392b); -fx-background-radius: 30; -fx-text-fill: white; -fx-padding: 5 15; -fx-font-weight: bold;">
                                    <font><Font size="28.0"/></font>
                                </Label>
                            </children>
                        </VBox>

                        <Label text="BATTLE ROYALE" styleClass="header-title" style="-fx-text-fill: #e74c3c;" />

                        <!-- JOUEURS -->
                        <HBox alignment="CENTER" spacing="10.0" styleClass="info-box">
                            <children>
                                <Label text="ðŸ‘¥" style="-fx-text-fill: white;"/>
                                <Label fx:id="labelNbJoueurs" text="" styleClass="info-value"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>


            </children>
        </VBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <HBox spacing="15.0" style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
            <children>
                <!-- Tableau des joueurs -->
                <VBox spacing="0.0" HBox.hgrow="ALWAYS" styleClass="content-panel" style="-fx-padding: 0;">
                    <children>
                        <HBox fx:id="hboxTableHeader" spacing="0.0" style="-fx-background-color: rgba(255,255,255,0.05); -fx-padding: 10;" alignment="CENTER_LEFT">
                            <children>
                                <Label text="RANG" prefWidth="50.0" alignment="CENTER" styleClass="info-label"/>
                                <Label text="Joueur" prefWidth="100.0" styleClass="info-label"/>
                            </children>
                        </HBox>

                        <Separator styleClass="stats-separator" />

                        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS">
                            <content>
                                <VBox fx:id="vboxPlayers" spacing="5" style="-fx-padding: 5;"/>
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <!-- Chat / Log -->
                <VBox spacing="0.0" minWidth="220.0" maxWidth="280.0" styleClass="content-panel" style="-fx-padding: 0;">
                    <children>
                        <HBox alignment="CENTER" style="-fx-background-color: rgba(255,255,255,0.05); -fx-padding: 12; -fx-background-radius: 12 12 0 0;">
                            <children>
                                <Label text="ðŸ’¬ CHAT" styleClass="info-label"/>
                            </children>
                        </HBox>

                        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" styleClass="scroll-pane">
                            <content>
                                <VBox fx:id="vboxMessages" spacing="10.0" style="-fx-padding: 10;"/>
                            </content>
                        </ScrollPane>

                        <HBox spacing="5.0" style="-fx-padding: 10; -fx-background-color: rgba(0,0,0,0.2); -fx-background-radius: 0 0 12 12;" alignment="CENTER">
                            <TextField fx:id="tfMessageChat" promptText="Ã‰crivez un message..." HBox.hgrow="ALWAYS" onAction="#handleSendMessage" />
                            <Button fx:id="btnEnvoyer" text="âž¤" onAction="#handleSendMessage" styleClass="btn-secondary"/>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>
    
    <bottom>
         <HBox alignment="CENTER" style="-fx-padding: 20;">
              <Button fx:id="btnTerminer" text="ðŸ’€ FINIR LE ROUND" styleClass="btn-terminate" prefWidth="300"/>
