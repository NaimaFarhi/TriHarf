<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="550" prefWidth="1100" styleClass="root-stack" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.triharf.controllers.MenuPrincipalController">
    <children>
        <!-- Canvas/Effect layer could go here if implemented properly in Java, but purely FXML-based CSS background is safer -->
        <Pane styleClass="bg-pane" />

<BorderPane style="-fx-background-color: transparent;" prefWidth="1100.0" prefHeight="550.0">

            <!-- ===== TOP: LOGO (LEFT) ===== -->
            <top>
                <HBox alignment="CENTER_LEFT" styleClass="top-bar" style="-fx-padding: 50 0 0 50;">
                    <children>
                        <ImageView fitHeight="70" fitWidth="250" preserveRatio="true" pickOnBounds="true">
                            <image>
                                <Image url="@../images/logo.png" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>
            </top>

            <!-- ===== CENTER: GAME MODES & SIDEBAR ===== -->
            <center>
                <!-- Centered alignment is critical here -->
                <StackPane>
                    <HBox alignment="CENTER" spacing="40" style="-fx-padding: 0;">
                        <children>

                            <!-- ===== LEFT: GAME MODES GRID ===== -->
                            <GridPane alignment="CENTER" hgap="25" vgap="25">
                                <columnConstraints>
                                    <ColumnConstraints percentWidth="50" />
                                    <ColumnConstraints percentWidth="50" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints valignment="CENTER" />
                                    <RowConstraints valignment="CENTER" />
                                </rowConstraints>
                                <children>

                                    <!-- MODE: SOLO -->
                                    <Button fx:id="btnSolo" prefHeight="130" prefWidth="240" styleClass="mode-button" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                        <graphic>
                                            <StackPane prefHeight="130" prefWidth="240" styleClass="card-stack, card-solo">
                                                <children>
                                                    <ImageView fitHeight="130" fitWidth="240" preserveRatio="false" styleClass="mode-icon">
                                                        <image>
                                                            <Image url="@../images/solo.png" />
                                                        </image>
                                                    </ImageView>
                                                </children>
                                            </StackPane>
                                        </graphic>
                                    </Button>

                                    <!-- MODE: MULTIJOUEUR -->
                                    <Button fx:id="btnMultijoueur" prefHeight="130" prefWidth="240" styleClass="mode-button" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                        <graphic>
                                            <StackPane prefHeight="130" prefWidth="240" styleClass="card-stack, card-multi">
                                                <children>
                                                    <ImageView fitHeight="130" fitWidth="240" preserveRatio="false" styleClass="mode-icon">
                                                        <image>
                                                            <Image url="@../images/multijoueurs.png" />
                                                        </image>
                                                    </ImageView>
                                                </children>
                                            </StackPane>
                                        </graphic>
                                    </Button>

                                    <!-- MODE: BATTLE ROYALE -->
                                    <Button fx:id="btnBattleRoyale" prefHeight="130" prefWidth="240" styleClass="mode-button" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                        <graphic>
                                            <StackPane prefHeight="130" prefWidth="240" styleClass="card-stack, card-br">
                                                <children>
                                                    <ImageView fitHeight="130" fitWidth="240" preserveRatio="false" styleClass="mode-icon">
                                                        <image>
                                                            <Image url="@../images/battleroyale.png" />
                                                        </image>
                                                    </ImageView>
                                                </children>
                                            </StackPane>
                                        </graphic>
                                    </Button>

                                    <!-- MODE: CHAOS -->
                                    <Button fx:id="btnChaos" prefHeight="130" prefWidth="240" styleClass="mode-button" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                        <graphic>
                                            <StackPane prefHeight="130" prefWidth="240" styleClass="card-stack, card-chaos">
                                                <children>
                                                    <ImageView fitHeight="130" fitWidth="240" preserveRatio="false" styleClass="mode-icon">
                                                        <image>
                                                            <Image url="@../images/mode_chaos.png" />
                                                        </image>
                                                    </ImageView>
                                                </children>
                                            </StackPane>
                                        </graphic>
                                    </Button>

                                </children>
                            </GridPane>

                        </children>
                    </HBox>
                </StackPane>
            </center>

            <!-- ===== RIGHT: SIDEBAR (STATS + JOIN) ===== -->
            <right>
                <VBox alignment="CENTER_RIGHT" spacing="20" prefWidth="350" style="-fx-padding: 0 30 0 0;">
                    <children>
                        <!-- STATS PANEL -->
                        <VBox spacing="15" styleClass="stats-panel" VBox.vgrow="NEVER">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label styleClass="stats-title" text="STATISTIQUES" />
                                    </children>
                                </HBox>

                                <Separator styleClass="stats-separator" />

                                <!-- Condensed Stats -->
                                <VBox spacing="8" styleClass="stats-sub-panel">
                                    <children>
                                        <HBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label styleClass="stats-label" text="Victoires:" />
                                                <Region HBox.hgrow="ALWAYS" />
                                                <Label fx:id="lblVictoires" styleClass="stats-value" text="" />
                                            </children>
                                        </HBox>
                                        <Separator opacity="0.3" />
                                        <HBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label styleClass="stats-label" text="Parties:" />
                                                <Region HBox.hgrow="ALWAYS" />
                                                <Label fx:id="lblParties" styleClass="stats-value" text="" />
                                            </children>
                                        </HBox>
                                        <Separator opacity="0.3" />
                                        <HBox alignment="CENTER_LEFT">
                                            <children>
                                                <Label text="â­ " style="-fx-font-size: 14px;" />
                                                <Label styleClass="stats-label" text="Record:" />
                                                <Region HBox.hgrow="ALWAYS" />
                                                <Label fx:id="lblBestScore" styleClass="stats-value" text="" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                                
                                <!-- Optional: Records List (Keep minimal) -->
                                <VBox fx:id="vboxRecords" spacing="5" styleClass="records-panel">
                                    <!-- Dynamic records -->
                                </VBox>
                            </children>
                        </VBox>

                        <!-- JOIN GAME PANEL -->
                        <VBox spacing="10.0" styleClass="content-panel">
                            <children>
                                <HBox spacing="10.0" alignment="CENTER_LEFT">
                                    <children>
                                        <Label text="ðŸ”—" style="-fx-font-size: 18px;" textFill="white"/>
                                        <Label text="Rejoindre" styleClass="label-bright"/>
                                    </children>
                                </HBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <TextField fx:id="tfCodePartie" promptText="Code Partie" />
                                    </children>
                                </VBox>

                                <Button fx:id="btnRejoindre" text="REJOINDRE" onAction="#handleRejoindre"
                                        styleClass="btn-secondary" maxWidth="Infinity" style="-fx-padding: 8 15;"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </right>

            <!-- ===== BOTTOM: SETTINGS (LEFT) ===== -->
            <bottom>
                <HBox alignment="CENTER_LEFT" style="-fx-padding: 0 0 50 50;">
                    <children>
                        <Button fx:id="btnParametres" text="âš™" styleClass="btn-settings" style="-fx-font-size: 24px; -fx-padding: 5 15;"/>
                    </children>
                </HBox>
            </bottom>

        </BorderPane>
    </children>
</StackPane>