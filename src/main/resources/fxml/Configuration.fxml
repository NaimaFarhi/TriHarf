<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="900.0" spacing="15.0" styleClass="root-vbox" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.triharf.controllers.ParametresGenerauxController">

   <fx:define>
      <ToggleGroup fx:id="langueGroup"/>
   </fx:define>

    <children>

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT" prefWidth="560.0" styleClass="header-bar">
            <children>
                <Button fx:id="btnRetour" onAction="#handleRetour" styleClass="btn-back" text="â†" />
                <Label text="âš™ Configuration" styleClass="header-title">
                    <HBox.margin>
                        <Insets left="40.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>

        <!-- SCROLLABLE CONTENT -->
        <ScrollPane fitToWidth="true" styleClass="scroll-pane" VBox.vgrow="ALWAYS" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox spacing="15.0" alignment="TOP_CENTER" style="-fx-padding: 10;">
                    <children>

                        <!-- Choix de la langue -->
                        <VBox prefWidth="560.0" spacing="10.0" styleClass="content-panel">
                            <children>
                                <Label styleClass="label-bright" text="Langue :" />
                                <HBox spacing="20.0">
                                    <children>
                                        <RadioButton fx:id="rbFrancais" selected="true" styleClass="radio-button" text="FranÃ§ais" toggleGroup="$langueGroup" />
                                        <RadioButton fx:id="rbAnglais" styleClass="radio-button" text="English" toggleGroup="$langueGroup" />
                                        <RadioButton fx:id="rbArabe" styleClass="radio-button" text="Arabe" toggleGroup="$langueGroup" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Pseudo -->
                        <VBox prefWidth="560.0" spacing="10.0" styleClass="content-panel">
                            <children>
                                <Label styleClass="label-bright" text="Pseudo :" />
                                <TextField fx:id="txtPseudo" promptText="Entrez votre pseudo..." styleClass="text-field" />
                            </children>
                        </VBox>

                        <!-- Son -->
                        <VBox prefWidth="560.0" spacing="10.0" styleClass="content-panel">
                            <children>
                                <Label styleClass="label-bright" text="Volume :" />
                                <CheckBox fx:id="cbMute" styleClass="check-box" text="Couper le son" />
                                <Slider fx:id="sliderVolume" max="100" min="0" styleClass="slider" value="50" />
                            </children>
                        </VBox>

                        <Button fx:id="btnEnregistrer" onAction="#handleEnregistrer" styleClass="btn-action" text="ðŸ’¾ ENREGISTRER" />
                        <Label fx:id="lblSaveConfirmation" styleClass="label-success" text="" textFill="GREEN" visible="false">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>

                    </children>
                </VBox>
            </content>
        </ScrollPane>

    </children>
</VBox>
