<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="900.0" prefHeight="650.0"
            style="-fx-background-color: #f5f5f5;">

    <!-- En-tête violet -->
    <top>
        <VBox spacing="0">
            <children>
                <HBox alignment="CENTER" prefHeight="70.0"
                      style="-fx-background-color: linear-gradient(to right, #9b59b6, #8e44ad); -fx-padding: 15;" spacing="60.0">
                    <children>
                        <!-- Bouton flèche -->
                        <Button fx:id="btnBack" text="←"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
                            <cursor><Cursor fx:constant="HAND"/></cursor>
                        </Button>

                        <HBox alignment="CENTER" spacing="10.0"
                              style="-fx-background-color: white; -fx-background-radius: 25; -fx-padding: 8 15 8 15;">
                            <children>
                                <Label text="Temps:" style="-fx-text-fill: #8e44ad; -fx-font-weight: bold;">
                                    <font><Font size="14.0"/></font>
                                </Label>
                                <Label fx:id="lblTimer" text="00:56" style="-fx-text-fill: #8e44ad; -fx-font-weight: bold;">
                                    <font><Font size="18.0"/></font>
                                </Label>
                            </children>
                        </HBox>

                        <Label text="PARTIE MULTIJOUEURS" style="-fx-text-fill: white; -fx-font-weight: bold;">
                            <font><Font size="22.0"/></font>
                        </Label>

                        <HBox alignment="CENTER" spacing="10.0"
                              style="-fx-background-color: rgba(255,255,255,0.3); -fx-background-radius: 25; -fx-padding: 8 15 8 15;">
                            <children>
                                <Label fx:id="lblJoueurs" text="4 joueurs" style="-fx-text-fill: white; -fx-font-weight: bold;">
                                    <font><Font size="16.0"/></font>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <!-- Bande avec la lettre -->
                <HBox alignment="CENTER" prefHeight="80.0"
                      style="-fx-background-color: linear-gradient(to right, #8e44ad, #9b59b6); -fx-padding: 15;">
                    <children>
                        <VBox alignment="CENTER" spacing="5">
                            <children>
                                <Label text="Lettre à trouver" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14px;" />
                                <Label fx:id="lblLettre" text="A"
                                       style="-fx-background-color: white; -fx-background-radius: 50; -fx-padding: 15 25 15 25; -fx-text-fill: #8e44ad; -fx-font-weight: bold;">
                                    <font><Font size="42.0"/></font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- Contenu principal -->
    <center>
        <HBox spacing="15.0" style="-fx-padding: 20;">
            <children>
                <!-- Tableau des joueurs -->
                <VBox spacing="0.0" prefWidth="650.0"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.3, 0, 3);">
                    <children>
                        <!-- En-tête du tableau -->
                        <HBox spacing="0.0" style="-fx-background-color: #34495e; -fx-padding: 10;" alignment="CENTER_LEFT">
                            <children>
                                <Label text="RANG" prefWidth="50.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold;">
                                    <font><Font size="14.0"/></font>
                                </Label>
                                <Label text="Joueur" fx:id="lblJoueurHeader" prefWidth="100.0"
                                       style="-fx-text-fill: white; -fx-font-weight: bold;">
                                    <font><Font size="14.0"/></font>
                                </Label>
                                <Label text="Pays" fx:id="lblPaysHeader" prefWidth="60.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                                <Label text="Animal" fx:id="lblAnimalHeader" prefWidth="60.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                                <Label text="Fruit" fx:id="lblFruitHeader" prefWidth="60.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                                <Label text="Métier" fx:id="lblMetierHeader" prefWidth="60.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                                <Label text="Film" fx:id="lblFilmHeader" prefWidth="60.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                                <Label text="Prénom" fx:id="lblPrenomHeader" prefWidth="60.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                                <Label text="Ville" fx:id="lblVilleHeader" prefWidth="60.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 11px;" />
                                <Label text="Score" fx:id="lblScoreHeader" prefWidth="80.0" alignment="CENTER"
                                       style="-fx-text-fill: white; -fx-font-weight: bold;">
                                    <font><Font size="14.0"/></font>
                                </Label>
                            </children>
                        </HBox>

                        <Separator style="-fx-background-color: #bdc3c7;" />

                        <!-- Les lignes des joueurs -->
                        <VBox fx:id="vboxPlayers" spacing="5" style="-fx-padding: 5;" />
                    </children>
                </VBox>

                <!-- Barre de chat -->
                <VBox spacing="0.0" prefWidth="220.0"
                      style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.3, 0, 3);">
                    <children>
                        <HBox alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 12; -fx-background-radius: 12 12 0 0;">
                            <children>
                                <Label text="CHAT" fx:id="lblChatHeader" style="-fx-text-fill: white; -fx-font-weight: bold;">
                                    <font><Font size="16.0"/></font>
                                </Label>
                            </children>
                        </HBox>

                        <ScrollPane fitToWidth="true" prefHeight="440.0"
                                    style="-fx-background-color: #ecf0f1; -fx-background: #ecf0f1;">
                            <content>
                                <VBox fx:id="vboxMessages" spacing="10.0" style="-fx-padding: 10; -fx-background-color: #ecf0f1;" />
                            </content>
                        </ScrollPane>

                        <HBox spacing="5.0" style="-fx-padding: 10; -fx-background-color: white; -fx-background-radius: 0 0 12 12;" alignment="CENTER">
                            <TextField fx:id="tfMessage" promptText="Écrivez un message..." prefWidth="150.0"
                                       style="-fx-background-radius: 20; -fx-padding: 8;">
                                <font><Font size="12.0"/></font>
                            </TextField>

                            <Button fx:id="btnSend" text="Envoyer"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 8 12 8 12; -fx-font-size: 12px; -fx-font-weight: bold;">
                                <cursor><Cursor fx:constant="HAND"/></cursor>
                            </Button>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </center>

</BorderPane>
